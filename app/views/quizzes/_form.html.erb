<%= form_with(model: quiz, local: true) do |form| %>

  <%= render "/errors", object: quiz %>

  <div class="form-group">
    <%= form.label :start_date %>
    <%= date_field_tag 'quiz[start_date]', ( quiz.start || Time.new ).strftime('%Y-%m-%d'), class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :start_time, "Start time (UTC)" %>
    <%= time_field_tag 'quiz[start_time]', ( quiz.start || Time.new ).strftime('%H:%M'), class: "form-control" %>
  </div>

  <div class="actions">
    <%= link_to "Cancel", quiz_path(quiz), class: "btn btn-secondary" %>
    <%= form.submit "Set start time", class: "btn btn-primary" %>
  </div>
<% end %>
